pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/<your-repo>.git'
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                sh './terraform_apply.sh'
            }
        }

        stage('Send Alert to Teams') {
            steps {
                script {
                    def webhookUrl = '<TEAMS_WEBHOOK_URL>'
                    def message = 'Grafana deployed successfully. Alerts are active.'
                    sh "python send_teams_alert.py ${webhookUrl} "${message}""
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}